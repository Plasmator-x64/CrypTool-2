<UserControl x:Class="DictionaryAdvanced.DictionaryAdvancedPresentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DictionaryAdvanced"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="320">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="100" MinWidth="100" Width="100"/>
            <ColumnDefinition MaxWidth="540" MinWidth="540" Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="50" MinHeight="50" Height="50"/>
            <RowDefinition MaxHeight="50" MinHeight="50" Height="50"/>
            <RowDefinition MaxHeight="50" MinHeight="50" Height="50"/>
            <RowDefinition MaxHeight="50" MinHeight="50" Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Loading :" Grid.Row="4" Grid.Column="0" Background="AntiqueWhite" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <Label Name="Status" Content="Ready" Grid.Row="4" Grid.Column="1" Background="AntiqueWhite" HorizontalAlignment="Left" VerticalAlignment="Center" />
    </Grid>
</UserControl>
